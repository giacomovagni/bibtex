doi = {10.1037//0022-3514.78.2.273},
journal = {Journal of Personality and Social Psychology},
number = {2},
pages = {273--284},
title = {{Couples' Shared Participation in Novel and Arousing Activities and Experienced Relationship Quality}},
volume = {78},
