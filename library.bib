@article{Inglehart2000-pn,
abstract = {Modernization theorists from Karl Marx to Daniel Bell have argued
that economic development brings pervasive cultural changes. But
others, from Max Weber to Samuel Huntington, have claimed that
cultural values are an enduring and autonomous influence on
society. We test the thesis that economic development is linked
with systematic changes in basic values. Using data from the
three waves of the World Values Surveys, which include 65
