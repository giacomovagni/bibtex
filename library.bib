issn = {0038-0385, 1469-8684},
journal = {Sociology},
month = {apr},
number = {2},
pages = {219--250},
publisher = {SAGE PublicationsSage UK: London, England},
title = {{A New Model of Social Class? Findings from the BBC's Great British Class Survey Experiment}},
volume = {47},
year = {2013}
}
